{
  "styles" : {
    "src" : "./src/styles/**/*.+(scss|styl)",
    "outputName" : "style.min.css",
    "dest" : "./dist/css/"
  },
  "html" : {
    "src" : "./src/pages/**/*.+(html|nunjucks)",
    "dataSrc" : "../src/data/data.json",
    "partials" : "./src/templates/**/*.nunjucks",
    "template" : "./src/templates/",
    "dest" : "./dist"
  },
  "images" : {
    "src" : "./src/img/**/*.+(jpg|jpeg|png)",
    "dest" : "./dist/img/"
  },
  "server" : {
    "src" : "",
    "dest" : "./dist"
  },
  "markdown" : {
    "src" : "./src/pages/**/*.+(md|markdown)",
    "dest" : "./dist"
  },
  "yaml" : {
    "src" : "./src/data/yaml/**/*.+(yaml|yml)",
    "name" : "./src/data/yaml/yaml-combined.json",
    "dest" : "./src/data/json/"
  },
  "json" : {
    "src" : "./src/data/json/**/*.json",
    "name" : "combined.json",
    "dest" : "./src/data/"
  },
  "tasks" : {
    "src" : "/gulp/"
  }
}